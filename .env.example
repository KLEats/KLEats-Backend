# ----------------------------
# Server Configuration
# ----------------------------
PORT=3000
SECRET_KEY=your_secret_key_here

# ----------------------------
# Mail Configuration
# ----------------------------
NODE_MAIL=your_email@example.com
NODE_PASSWORD=your_app_password
NODE_HOST=smtp.gmail.com
NODE_PORT=587

# ----------------------------
# MySQL Database Configuration
# ----------------------------
mysql_user=root
mysql_password=your_mysql_password
mysql_database=kleatsdatabase
mysql_host=localhost
mysql_port=3306

# ----------------------------
# Redis Configuration
# ----------------------------
redis_host=127.0.0.1
redis_port=6379
redis_password=your_redis_password
redis_time_item=60
redis_time_cart=60
redis_time_canteens=60
redis_time_canteen=60
redis_time_category=60
redis_time_userorders=60

# ----------------------------
# Google OAuth Configuration
# ----------------------------
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/callback

# ----------------------------
# Environment
# ----------------------------
NODE_ENV=development
PUBLIC_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000

# ----------------------------
# Admin Credentials (for local dev only)
# ----------------------------
ADMIN_USER=admin
ADMIN_PASSWORD=your_admin_password

# ----------------------------
# Cashfree Payment Gateway
# ----------------------------
CASHFREE=TRUE
CASHFREE_ENV=sandbox
CASHFREE_APP_ID=your_cashfree_app_id
CASHFREE_SECRET=your_cashfree_secret
CASHFREE_API_VERSION=2022-09-01
CASHFREE_RETURN_BASE_URL=http://localhost:5173
CASHFREE_NOTIFY_BASE_URL=http://localhost:3000

# ----------------------------
# SSL Configuration (optional)
# ----------------------------
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# ----------------------------
# Telegram Bot Configuration
# ----------------------------
BOT_TOKEN=your_bot_token
CHAT_ID=your_chat_id
TELEGRAM_DEBUG=true

# ----------------------------
# Custom Config
# ----------------------------
PACKING_CHARGE_PER_ITEM=10
